{
  "name": "micbus",
  "version": "1.0.5",
  "description": "",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "src",
    "lib",
    "esm"
  ],
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "clean": "rimraf lib esm",
    "build": "npm run build:commonjs && npm run build:esm",
    "build:commonjs": "tsc --project .",
    "build:esm": "tsc --project . --outdir esm --module esnext",
    "test": "jest -c jest.unit.js",
    "test:integration": "jest -c jest.integration.js",
    "lint": "tslint --project .",
    "prerelease": "git checkout master && git pull --ff-only origin master && npm install && npm run clean && npm run lint && npm run test && npm run build",
    "release": "standard-version",
    "postrelease": "git push --follow-tags origin master && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "mabels/micbus"
  },
  "license": "AFL-2.0",
  "bugs": {
    "url": "https://github.com/mabels/micbus/issues"
  },
  "homepage": "https://github.com/mabels/micbus#readme",
  "devDependencies": {
    "@types/jest": "29.5.14",
    "@types/rimraf": "3.0.0",
    "@types/uuid": "3.4.6",
    "rimraf": "3.0.2",
    "standard-version": "9.3.0",
    "jest": "29.7.0",
    "jest-cli": "29.7.0",
    "tslint": "5.20.1",
    "prettier": "2.3.0",
    "ts-jest": "29.2.6",
    "ts-node": "10.0.0",
    "depcheck": "1.4.1",
    "typescript": "4.3.2"
  },
  "dependencies": {
    "uuid": "3.3.3"
  },
  "publishConfig": {
    "tag": "next"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "renovate": {
    "extends": [
      "config:base"
    ],
    "semanticPrefix": "chore:",
    "devDependencies": {
      "automerge": true
    },
    "packageRules": [
      {
        "packagePatterns": [
          "@types/"
        ],
        "automerge": true
      }
    ]
  },
  "resolutions": {}
}
